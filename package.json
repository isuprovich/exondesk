{
  "name": "exondesk",
  "version": "0.0.1",
  "description": "Server for Exondesk Client",
  "main": "app.ts",
  "author": "Ivan Suprovich",
  "license": "MIT",
  "scripts": {
    "start": "node build/app.js",
    "build": "tsc",
    "server": "nodemon app.ts",
    "client": "yarn --cwd client start",
    "client:install": "yarn --cwd client install",
    "client:build": "yarn --cwd client build",
    "dev": "cross-env NODE_ENV=development concurrently \"yarn server\" \"yarn client\"",
    "heroku-postbuild": "yarn build && yarn client:install && yarn client:build"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.19.1",
    "@types/config": "^0.0.39",
    "@types/express": "^4.17.13",
    "@types/express-validator": "^3.0.0",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/mongoose": "^5.11.97",
    "@types/redux": "^3.6.0",
    "@types/redux-thunk": "^2.1.0",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.12",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "config": "^3.3.6",
    "express": "^4.17.1",
    "express-validator": "^6.12.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.13.5",
    "path": "^0.12.7",
    "react-markdown": "^6.0.3",
    "redux": "^4.1.1",
    "redux-thunk": "^2.3.0",
    "concurrently": "^6.2.0"
  }
}
